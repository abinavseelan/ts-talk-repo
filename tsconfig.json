{
    "compilerOptions": {
        "module": "ES2015",
        "target": "es2020",
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "include": [
        "./demos/**/*",
        "./final/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}